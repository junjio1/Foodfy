{% extends "layout.njk" %}

{% block head %}
        <title>Preparo {{recipe.title}}</title>
{% endblock %}

{% block content %}

        <section class="recipes">
                <div class="recipe-image">
                        <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="recipe-title">
                        <h2>{{recipe.title}}</h2>
                </div>
                <div class="recipe-author">
                        <p>Por {{recipe.author}}</p>
                </div>

                <div class="recipes">
                        <h2>Ingredientes </h2> 
                        <p class="btn-show one">Esconder</p>

                        <ul class="lista recipe-info">
                         {% for ingredient in recipe.ingredients %}
                            <li>{{ingredient}}</li>
                         {% endfor %}
                        </ul>
                        
                </div>

                

                <div class="recipes">
                  <h2>Modo de Preparo</h2>
                  <p class="btn-show two">Esconder</p>
                  <p class='recipe-info'>{{recipe.preparation}}</p>
                </div>



                <div class="recipes">
                  <h2>Informacoes Adicionais</h2>
                  <p class="btn-show three">Esconder</p>
                  <p class='recipe-info' >{{recipe.information}}</p>
                </div>

        </section>

{% endblock %}