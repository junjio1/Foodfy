
    <div class="item">
        <div>Imagem da Receita</div>
        
        <div id="photos-upload-container"> 
            <div id="photos-upload">
                <input 
                id="photos-input"
                type="file"
                name="image"
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
             >
             <i class="material-icons">add</i>
            </div>

            <div id="photos-preview">
                <img src="#" alt="">
            </div>
            
        </div>
    </div>

    <div class="item">
        <div>Nome da Receita</div>
        <div> 
            <input class="input-field"
                type="text"
                name="title"
                value="{{recipe.title}}"
             >
        </div>
    </div>

    <div class="item">
        <div>Chef</div>
        
            <select name="chef_id" id="chef">
                <option value="" disabled selected>Selecione Chef</option>
                {% for chef in chefs%}
                <option value="{{chef.id}}" >{{chef.name}}</option>
                {%endfor%}
                {% if  recipe.chef_id %}
                <option value="{{recipe.chef_id}}" selected >{{recipe.chef_name}}</option>
                {% endif %}
                
            </select>
        
    </div>

    <div id="ingredients">
        <div class="item">
            <div>Ingredientes</div>
             
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input class="input-field"
                    type="text"
                    name="ingredients[]"
                    value="{{ingredient}}"
                >
                </div>
                {% else %}
                <div class="ingredient"> 
                <input class="input-field"
                    type="text"
                    name="ingredients[]"
                >
            {% endfor %}    
            </div>
        </div>
    </div>
    <span class="add-ingredient">Adiciornar novo ingrediente</span>
    <span class="exclude-ingredient">Deletar ultimo ingrediente </span>

    <div id="preparations">
        <div class="item">
            <div>Modo de Preparo</div>
                
                {% for prep in recipe.preparation %}
                    <div class="preparation">
                        <input class="input-field"
                        type="text"
                        name="preparation[]"    
                        value="{{prep}}"
                    >
                    </div>
                    {% else %}
                    <div class="preparation"> 
                    <input class="input-field"
                        type="text"
                        name="preparation[]"    
                    >

                {% endfor %}
                </div>
        </div>
    </div>  
    <span class="add-preparation" >Adiciornar novo passo</span>
    <span class="exclude-preparation">Deletar ultimo passo </span>
    
    <div class="item">
        <div>Informacoes Adicionais</div>
        <div> 
            <textarea  
            form="create_recipe" 
            name="information" 
            cols="" 
            rows="10">{{recipe.information}}</textarea>
        </div>
    </div>

     <script src="/adminScript.js"></script>