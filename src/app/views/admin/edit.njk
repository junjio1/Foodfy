{% extends "layoutAdmin.njk" %}

{% block head %}
    <title>Editar receita</title>
{% endblock %}

{% block content %}

<form method="POST" action="/admin/recipes/{{recipe.id}}?_method=PUT" id="create_recipe" >
<div class="form_header">   
        <h2>Editar Receita</h2> 
        <div>
            <button class="button delete" type="submit" form="delete-form">Deletar</button>
            <button type="submit">Salvar Receita</button>
        </div>
    </div>
    
    {% include 'admin/fields.njk' %}
                
    <input 
        type="hidden" 
        name="id" 
        value="{{ recipe.id }}">

</form>

<form action="/admin/recipes/{{recipeIndex}}?_method=DELETE" method="post"id="delete-form"></form>


{% endblock %}