{% extends "layoutAdmin.njk" %}

{% block head %}
    <title>Editar Chef</title>
{% endblock %}

{% block content %}

<form method="POST" action="/admin/chef/{{chef.id}}?_method=PUT" id="create_chef" >
<div class="form_header">   
        <h2>Editar Chef</h2> 
        <div>
            <button class="button delete" type="submit" form="delete-form">Deletar</button>
            <button type="submit">Salvar Receita</button>
        </div>
    </div>
    
    {% include 'admin/chefs/fieldsChef.njk' %}
                
    <input 
        type="hidden" 
        name="id" 
        value="{{ chef.id }}">

</form>

<form action="/admin/chefs/{{chef.id}}?_method=DELETE" method="post"id="delete-form">
    <input 
        type="hidden" 
        name="id" 
        value="{{ chef.id }}">
</form>


{% endblock %}