{% extends "layout.njk" %}

{% block  head %}
<title>Receitas </title>
{% endblock %}

{% block content %}

    <section id="cards">

        {% for recipe in recipes %}
            <div class="card" id="{{recipe.title}}">
                <div class="image_container">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="card_content">
                    <h2>{{recipe.title}}</h2>
                </div>
                <div class="card_info">
                    <p>{{recipe.author}}o</p>
                </div>
                <input type="hidden" name="id" value="{{recipe.id}}">

            </div>
            {% endfor %}
        

        
    </section>

{% endblock %}